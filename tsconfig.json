{
    "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",  // TS文件编译后会放入到此文件夹内
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "app/declare/*"
        ]
    }
    },
    "include": [
        "app/**/*"
    ]
}
